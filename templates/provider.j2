  <div class="bg-gray-100 border-b border-gray-300">
    <div class="max-w-7xl mx-auto px-4 lg:px-8">
      <main class="bg-gray-100 py-8">
        <div class="grid grid-cols-1 gap-6 lg:grid-flow-col-dense lg:grid-cols-3">
          <div class="space-y-6 lg:col-start-1 lg:col-span-2">

            <div class="card bg-white shadow" title="Infos clefs">
              <div class="card-body">
                <h2 class="card-title">Key facts</h2>

                <dl class="divide-y divide-gray-200">
                  <div class="py-2 sm:py-3 sm:grid sm:grid-cols-3 sm:gap-4">
                    <dt class="text-gray-500">Web Site</dt>
                    <dd class="mt-1 flex text-gray-900 sm:mt-0 sm:col-span-2">
                      <a
                          class="flex-grow underline text-blue-700"
                          href="{{ provider.website_url }}"
                      >{{ provider.website_url }}</a
                      >
                    </dd>
                  </div>

                  <div class="py-2 sm:py-3 sm:grid sm:grid-cols-3 sm:gap-4">
                    <dt class="text-gray-500">Year founded</dt>
                    <dd class="mt-1 flex text-gray-900 sm:mt-0 sm:col-span-2">
                      {{ provider.founded_year }}
                    </dd>
                  </div>

                </dl>
              </div>
            </div>

            <div class="card bg-white shadow">
              <div class="card-body">
                <h2 class="card-title">Solutions</h2>

                <div>
                  {% for solution in provider.solution_list %}
                    <span class="badge badge-primary">{{ solution.title }}</span>
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>

          <div class="lg:col-start-3 lg:col-span-1 space-y-6">
            <div class="card p-0 rounded shadow">
              <div class="card-body p-0">
                <a href="http://www.abilian.com/fr/">
                  <img
                      src="/societes/789133493/screenshot"
                      style="width: 100%"
                      alt=""
                  />
                </a>
              </div>
            </div>

            <div class="card bg-white shadow">
              <div class="card-body">
                <h2 class="card-title">Address</h2>

                {% set location = provider["location"] %}

                <ul>
                  <li class="mt-2">
                  <span>
                    <svg
                        style="outline"
                        class="inline h-5 w-5 mr-4 text-gray-400"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        aria-hidden="true"
                    >
                      <path
                          fill-rule="evenodd"
                          d="M12 1.586l-4 4v12.828l4-4V1.586zM3.707 3.293A1 1 0 002 4v10a1 1 0 00.293.707L6 18.414V5.586L3.707 3.293zM17.707 5.293L14 1.586v12.828l2.293 2.293A1 1 0 0018 16V6a1 1 0 00-.293-.707z"
                          clip-rule="evenodd"
                      />
                    </svg>

                    {{ location.address }}
                    <a href="/">{{ location.city }}</a>,
                    <a href="/">{{ location.country }}</a>
                  </span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

